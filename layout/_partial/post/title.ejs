<% if (post.link){ %>
  <h1 class="thumb" itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h1 class="thumb" itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>" title="<% post.title %>">
        <%= post.title %>
        <img style="max-width:100%;padding-top:10px;" src="<%= url_for(post.path) + "/" + post.photos[0] %>" />
      </a>
    </h1>
  <% } else { %>
    <h1 class="thumb" class="<%= class_name %>" itemprop="name">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>

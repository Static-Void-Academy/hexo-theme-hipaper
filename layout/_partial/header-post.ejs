<% if (is_current("about", false) && theme.about_big_image){ %>

  <div class="site-header-image">
    <img id="originBg" width="100%" alt="The Gastronomist" src="">
  </div>

  <div id="header-blur" class="site-header-image blur" style="position: absolute; top:0; height: 207px; min-height: 207px; min-width: 100%;">
    <img id="blurBg" width="100%" style="top: 96%" alt="The Gastronomist" src="">
  </div>

  <script>
        var imgUrls = "<%- theme.about_big_image %>".split(",");
        var random = Math.floor((Math.random() * imgUrls.length ));
        if (imgUrls[random].startsWith('http') || imgUrls[random].indexOf('://') >= 0) {
          document.getElementById("originBg").src=imgUrls[random];
          document.getElementById("blurBg").src=imgUrls[random];
        } else {
          document.getElementById("originBg").src='<%= config.root %>' + imgUrls[random];
          document.getElementById("blurBg").src='<%= config.root %>' + imgUrls[random];
        }
    </script>

<% } %>


<header id="allheader" class="site-header" role="banner"
  <% if (is_current("about", false) && theme.about_big_image){ %> style="width: 100%; position: absolute; top:0; background: rgba(255,255,255,.8);" <% } %> >
  <div class="clearfix container">
      <div class="clearfix site-branding">
          <a href="<%= config.root %>" rel="home" style="width: 100%; height: 100%;">
              <% if (theme.avatar.enable){ %>
                  <img class="site-branding-logo" style="margin-bottom: <%= theme.avatar.bottom %>px;"  width="<%= theme.avatar.width %>px" height="<%= theme.avatar.height %>px" alt="The Gastronomist" src="<% if (!(theme.avatar.url.startsWith('http') || theme.avatar.url.indexOf('://') >= 0)){ %> <%-config.root %><% } %><%- theme.avatar.url %>" />
              <% } %>
              <h1 class="site-title">
                  <%= config.title %>
              </h1>
              <% if (config.description){ %>
                  <div class="site-description"><%= config.description %></div>
              <% } %>
          </a>
      </div>
      <nav id="main-navigation" class="main-navigation" role="navigation">
        <a class="nav-open">Menu</a>
        <a class="nav-close">Close</a>

        <div class="clearfix sf-menu">
          <ul id="main-nav" class="menu sf-js-enabled sf-arrows"  style="touch-action: pan-y;">
                <% for (var i in theme.menu){ %>
                  <li class="menu-item menu-item-type-custom menu-item-object-custom menu-item-home menu-item-1663"> <a class="" href="<%- url_for(theme.menu[i]) %>"><%= __(i.toLowerCase()) %></a> </li>
                <% } %>
          </ul>
        </div>
      </nav>
  </div>
</header>
